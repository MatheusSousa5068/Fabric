<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
      integrity="sha512-5fsy+3xG8N/1PV5MIJz9ZsWpkltijBI48gBzQ/Z2eVATePGHOkMIn+xTDHIfTZFVb9GMpflF2wOWItqxAP2oLQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Fabric | Cadastro</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inconsolata&display=swap");

      * {
        font-family: "Inconsolata", cursive;
      }

      body {
        width: 100%;
        margin: 0 0 0 0;
        background: #144f4f;
        color: #2c1a4d;
      }

      form {
        position: absolute;
        width: 745px;
        height: 950px;
        left: 28%;
        top: 131px;
        background: #ffffff;
        border-radius: 25px;
        padding-left: 25px;
      }

      .label {
        font-size: 24px;
      }
      h1 {
        padding-top: 30px;
      }

      #register-input {
        margin-left: 300px;
      }

      .login {
        margin-left: 247px;
        margin-top: 24px;
      }

      .input {
        
        box-shadow: 0 0 1em black;
        position: absolute;
        width: 78%;
        height: 38px;
      }

      #cpf {
        position: absolute;
        width: 78%;
        height: 38px;
      }

      #email {
        position: absolute;
        width: 78%;
        height: 38px;
      }

      #telefone {
        position: absolute;
        width: 78%;
        height: 38px;
      }

      #senha {
        position: absolute;
        width: 78%;
        height: 38px;
      }

      #senha2 {
        position: absolute;
        width: 78%;
        height: 38px;
      }

      .divs {
        padding-top: 70px;
      }
    </style>
  </head>
  <body>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <form action="/users/register" method="POST">
      <h1>Register</h1>

      <div>
        <label for="nome" id="label-no" class="label">Nome Completo</label>
        <input type="text" id="nome" name="nome" required class="input" />
      </div>

      <div class="divs">
        <label for="cpf" id="label-cpf" class="label">CPF</label>
        <input type="text" id="cpf" name="cpf" required />
      </div>

      <div class="divs" class="email">
        <label for="email" id="label-email" class="label">Email</label>

        <input type="email" id="email" name="email" required />
      </div>

      <div class="divs">
        <label for="telefone" id="label-telefone" class="label">Telefone</label>

        <input type="text" id="telefone" name="telefone" required />
      </div>

      <div class="divs">
        <label for="senha" id="label-senha" class="label">Senha</label>

        <input type="password" id="senha" name="senha" required />
      </div>

      <div class="divs">
        <label for="senha2" id="label-senha2" class="label"
          >Confirme sua senha</label
        >
        <input type="password" id="senha2" name="senha2" required />
      </div>

      <div class="divs">
        <input type="submit" value="Register" id="register-input" />
      </div>

      <div class="login">
        <a href="/users/login">Já cadastrado? Faça Login Aqui!</a>
      </div>
    </form>
  </body>
</html>
